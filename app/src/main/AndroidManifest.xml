<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="auto">
    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.DisasterDetectorAlert"
        tools:targetApi="31">
        <activity
            android:name=".FarmerDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert" />
        <activity
            android:name=".CropManagementActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert"
            android:parentActivityName=".FarmerDashboardActivity" />
        <activity
            android:name=".FarmerForecastActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert"
            android:parentActivityName=".FarmerDashboardActivity" />
        <activity
            android:name=".FarmerSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert"
            android:parentActivityName=".FarmerDashboardActivity" />
        <!-- Google Places API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${GOOGLE_PLACES_API_KEY}" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocationActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert" />
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert" />
        <activity
            android:name=".AlertsActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert" />
        <activity
            android:name=".ForecastActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert" />
        <activity
            android:name=".FarmerLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".FarmerRegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".CommunityLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".CommunityRegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.DisasterDetectorAlert"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>